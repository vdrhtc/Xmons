    }

    if (direction=="dr")  {  // down + right
        point center;
        center.set(start.x()+radius, start.y());
        curCell->addPolygonArc(center, radius-width/2, radius+width/2, 180, 180+angle , layer);
        start.set(start.x()+radius, start.y()-radius);
